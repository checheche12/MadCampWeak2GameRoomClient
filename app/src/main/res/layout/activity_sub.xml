<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="시작"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/readycancle" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/player4"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.78"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:id="@+id/player1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:id="@+id/player2" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/player1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:id="@+id/player3" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/player2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:id="@+id/player4" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/player3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="35dp"
    />
</android.support.constraint.ConstraintLayout>